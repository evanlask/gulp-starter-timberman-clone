{
  "DEFAULT_TASK": "dev",
  "PATHS": {
    "SRC": "src",
    "DIST": "dist",
    "SCRIPTS": "scripts",
    "STYLES": "styles",
    "MEDIA": "media"
  },
  "PREFIX_BUILD": "build-",
  "PREFIX_WATCH": "watch-",
  "SASS_OPTIONS": {
    "outputStyle": "compressed"
  },
  "AUTO_PREFIXER_OPTIONS": {
    "browsers": ["last 2 versions", "ie >= 10"]
  },
  "HTML_MIN_OPTIONS": {
    "removeComments": true,
    "collapseWhitespace": true,
    "conservativeCollapse": true,
    "removeTagWhitespace": true,
    "removeRedundantAttributes": true,
    "removeEmptyAttributes": true
  },
  "IMAGEMIN_OPTIONS": {
    "progressive": true,
    "interlaced": true
  },
  "UGLIFY_OPTIONS": {
    "preserveComments": "license"
  },
  "JSHINT_OPTIONS": {
    "bitwise": true,
    "browser": true,
    "curly": true,
    "debug": true,
    "devel": true,
    "eqeqeq": true,
    "forin": true,
    "freeze": true,
    "globals": {
      "PIXI": true,
      "CES": true
    },
    "noarg": true,
    "noempty": true,
    "nonbsp": true,
    "undef": true,
    "unused": true
  },
  "SCRIPT_BUNDLES": [{
    "dest": "libs.built.js",
    "files": [
      "lib/ces-browser.min.js",
      "lib/pixi.min.js",
      "lib/stats.min.js"
    ]
  },{
    "dest": "timberman.built.js",
    "lint": true,
    "files": [
      "components/Dimension.js",
      "components/PlayerControlled.js",
      "components/Position.js",
      "components/Rendered.js",
      "components/Rotation.js",
      "components/Sprite.js",
      "components/SpriteAnimated.js",
      "components/TilePosition.js",
      "systems/PlayerControl.js",
      "systems/RenderPixi.js",
      "systems/SpriteAnimator.js",
      "systems/TilePositionAnimator.js",
      "TimberMan.js"
    ]
  }]
}
